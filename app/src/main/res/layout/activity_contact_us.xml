<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- First CardView Content -->
    <LinearLayout
        android:id="@+id/card1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Person Image -->
        <ImageView
            android:id="@+id/person_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/personcd_img" />

        <!-- CardView Content -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contactCard1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Name -->
                <TextView
                    android:id="@+id/text_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gaurav Bodake"
                    android:textSize="18sp" />

                <!-- Phone Number -->
                <TextView
                    android:id="@+id/text_phone1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9697600303"
                    android:textSize="16sp" />

                <!-- Email -->
                <TextView
                    android:id="@+id/text_email1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gauravbodake1@gmail.com"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Second CardView Content -->
    <LinearLayout
        android:id="@+id/card2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        >

        <!-- Person Image -->
        <ImageView
            android:id="@+id/person_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/personcd_img" />

        <!-- CardView Content -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contactCard2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Name -->
                <TextView
                    android:id="@+id/text_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sushant Bhat"
                    android:textSize="18sp" />

                <!-- Phone Number -->
                <TextView
                    android:id="@+id/text_phone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7620776241"
                    android:textSize="16sp" />

                <!-- Email -->
                <TextView
                    android:id="@+id/text_email2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="bssushant2003@gmail.com"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>